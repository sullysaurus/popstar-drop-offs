---
import "@fontsource-variable/inter";
import Features from "~/components/features.astro";
import Footer from "~/components/footer.astro";
import Googlereviews from "~/components/googlereviews.astro";
import Header from "~/components/header.astro";
import Partners from "~/components/partners.astro";
import Showcase from "~/components/showcase.astro";
import Splash from "~/components/splash.astro";
import Form from "~/components/form.astro";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Photo booth rentals for weddings, corporate events and holidays in Raleigh, NC and surrounding areas.";
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="light">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-NCN2WPGM");
    </script>
    <!-- End Google Tag Manager -->

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-M24GRXHZVN"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-M24GRXHZVN", {
        linker: {
          domains: [
            "popstarphotobooths.com",
            "popstar-photo-booths.checkcherry.com",
          ],
        },
      });
    </script>
    <!-- End Google Analytics -->

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>Popstar Photo Booths</title>
    <meta name="description" content={description} />

    <!-- Social Media Metadata -->
    <meta property="og:title" content="Astro" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <!-- Header -->
    <Header />
    <Splash />

    <!-- Main Content -->
    <div class="space-y-24">
      <Features />
      <Showcase />
      <Form />
      <Googlereviews />
      <Partners />
    </div>

    <!-- Footer -->
    <Footer />

    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-NCN2WPGM"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
  </body>
</html>

